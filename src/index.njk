---
layout: base
eleventyComputed:
  title: "{{ homepage.title }}"
  description: "{{ homepage.description }}"
path: home
---

<section
    class="h-screen max-h-[600px] relative bg-metal text-white flex bg-no-repeat flex-col items-start justify-center bg-cover bg-center bg-[url('{{ homepage.background }}')] border-metal border-b-[20px] bg-blend-multiply from-transparent to-gray-400 Xbg-gradient-to-b"
>
    <div
        class="absolute top-0 w-full h-5/6 bg-cover bg-no-repeat bg-top bg-[url('/static/img/grid-deco-opacity-50.png')]"
    >
        <div class="container h-100 relative pt-24 max-w-screen-lg flex md:block flex-col items-center">
            <h1
                class="w-3/4 md:w-9/12 text-4xl md:text-6xl font-bold font-robotocondensed text-center md:text-left items-center md:items-start uppercase tracking-normal partial-border partial-border-6"
            >
                {{ homepage.slogan }}
            </h1>

            <p class="mt-4 text-center md:text-left font-medium text-lg md:text-2xl font-titillium">
                {{ homepage.subtext }}
            </p>

            <div class="mt-8 text-center md:text-left">
                <a
                    href="{{ homepage.button1.url }}"
                    type="button"
                    class="font-light text-white font-titillium bg-metal rounded-md text-sm px-5 py-3 me-2 mb-2 hover:opacity-50 uppercase"
                >
                    {{ homepage.button1.text }}
                </a>

                <a
                    href="{{ homepage.button2.url }}"
                    type="button"
                    class="py-3 px-5 me-2 mb-2 font-titillium text-sm font-light bg-white rounded-md border border-gray-200 hover:opacity-50 focus:z-10 focus:ring-4 focus:ring-gray-100 uppercase text-sienna"
                >
                    {{ homepage.button2.text }}
                </a>
            </div>
        </div>
    </div>
</section>

{% include "clients.njk" %}

<div class="container mb-5 relative {% if fullWidth %}max-w-screen-lg{%else%}max-w-screen-sm{%endif%} flex items-start justify-center px-7 md:px-0 {% if showClients %}-top-14{%endif%}">
    {% if not fullWidth %}<div class="block">{%endif%}
       <div class="vs-section vs-section-service vs-home">       
{% renderTemplate "njk, md", homepage %}    
{{ content | safe }}
{% endrenderTemplate %}
        </div>
    {% if not fullWidth %}</div>{%endif%}
</div>



